{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "rules": {
    "no-console": false
  }
}
