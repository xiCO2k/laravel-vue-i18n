{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "src/vite.ts",
    "src/mix.ts",
    "src/loader.ts",
  ],
  "rules": {
    "no-console": false
  }
}
